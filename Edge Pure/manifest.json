{
    "name": "Bing to Google Search",
    "version": "1.2.0",
    "author": "Alan Files",
    "default_locale": "en",
    "description": "A Google Chrome extension that allows you to easily search google for what you just binged.",
    "browser_action" : 
    {
        "default_icon" : 
        {
            "20" : "icons/icon20.png",
            "40" : "icons/icon40.png"
        },
        "default_title" : "Bing to Google",
        "default_popup" : "index.html"
    },
    "content_scripts" : [{
            "js" : ["index.js"],
            "matches" : ["*://*/*"]
        }
    ],
    "content_security_policy" : "script-src 'self'; object-src 'self'",
    "background": {
        "scripts": ["background.min.js"],
        "persistent": false
    },
    "permissions" : 
    [
        "*://*/*", "notifications",  "activeTab", "tabs", "contextMenus", "background", "webNavigation"
    ],
    "icons": {
        "128": "icon128.png",
        "16": "icon16.png",
        "48": "icon48.png"
    },
    "web_accessible_resources" : ["icon48.png"],
    "minimum_edge_version": "33.14281.1000.0"
}